#parse("include/entitiesNamesRef.vm")
// File generated by $generator.name ( version $generator.version ) - Date $today.date("yyyy-MM-dd") ( Time $today.time )
$env.setLanguage('JavaScript')
#set ( $LCentityName = $fn.uncapitalize($entity.name) )

#set( $Dollar = '$' )

import React, { Component } from 'react';
import { Button, ButtonGroup, Container, Table } from 'reactstrap';
import AppNavbar from './AppNavbar';
import { Link } from 'react-router-dom';

class $listComponentName extends Component {

    constructor(props) {
        super(props);
        this.state = {${LCentityName}s: []};
        this.remove = this.remove.bind(this);
    }

    componentDidMount() {
		
        fetch('/${LCentityName}')
            .then(response => response.json())
            .then(data => this.setState({{$LCentityName}s: data}));
			
    }

    async remove(id) {
		
        await fetch(`$LCentityName/${Dollar}{id}`, {
            method: 'DELETE',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            }
        }).then(() => {
			
			
            let updated${entity.name}s = [...this.state.${LCentityName}s].filter(i => i.id !== id);
            this.setState({{$LCentityName}s: updated${entity.name}s});
        });
    }

    render() {
		
        const ${LCentityName}s = this.state;


        const $listComponentName = ${LCentityName}s.map(${LCentityName} => {
            return <tr key={${LCentityName}.id}>
                <td style={{whiteSpace: 'nowrap'}}>{${LCentityName}.name}</td>
                <td>{${LCentityName}.email}</td>
                <td>
                    <ButtonGroup>

                        <Button size="sm" color="primary" tag={Link} to={"/${LCentityName}/" + ${LCentityName}.id}>Edit</Button>
                        <Button size="sm" color="danger" onClick={() => this.remove(${LCentityName}.id)}>Delete</Button>

                    </ButtonGroup>
                </td>
            </tr>
        });

        return (
            <div>
                <AppNavbar/>
                <Container fluid>
                    <div className="float-right">

                        <Button color="success" tag={Link} to="/${LCentityName}/new">Add ${entity.name}</Button>
                    </div>

                    <h3>Clients</h3>
                    <Table className="mt-4">
                        <thead>
                        <tr>

                            <th width="30%">Name</th>
                            <th width="30%">Email</th>
                            <th width="40%">Actions</th>
                        </tr>
                        </thead>
                        <tbody>

                        '${Dollar}{$listComponentName}'
                        </tbody>
                    </Table>
                </Container>
            </div>
        );
    }
}

export default $listComponentName;